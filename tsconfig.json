{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "allowJs": true,
        "strict": true,
        "noEmit": false,
        "declaration": true,
        "outDir": "dist",
        "rootDir": "src",
        "resolveJsonModule": true,
        "types": [
            "node"
        ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "template-*",
        "src/templates/**/*"
    ]
}